<div class="report-wrapper d-flex flex-column flex-md-row justify-content-lg-between">

    <section class="side-table mx-2 d-flex flex-md-column">

        {{!-- Transaction Adder --}}
        <div class="exp-wrapper bg-sec mt-3 pt-2 pb-3 px-3 rounded">

            <h3 class="text-center">Add Transaction</h3>

            <form>
                <div class="form-group">
                    <label for="transaction-name">Transaction Name:</label>
                    <input id="transaction-name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="transaction-amount">Amount:</label>
                    <input id="transaction-amount" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label for="transaction-category">Category:</label>
                    <select id="transaction-category" class="form-control">
                        <option value="none">Select a category...</option>
                        {{!-- How to skip income? --}}
                        {{#each categories as |category|}}
                        <option value="{{id}}">{{category_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button id="submit-transaction" type="submit" class="btn btn-block sbm-btn bg-tert mt-4">+ Add</button>
            </form>
        </div>

        {{!-- Category Adder --}}
        <div class="cat-wrapper bg-sec my-3 pt-2 pb-3 px-3 rounded">

            <h3 class="text-center">Add Category</h3>

            <form>
                <div class="form-group">
                    <label for="category-name">Category Name:</label>
                    <input id="category-name" type="text" class="form-control">
                </div>
                <button id="submit-category" type="submit" class="btn btn-block sbm-btn bg-tert mt-4">+ Add</button>
            </form>
        </div>

    </section>

    {{!-- Reports --}}
    <section class="reports w-100">

        {{#each categories as |category|}}
        <table class="my-3 rounded col-12">
            <colgroup>
            <col span="1" style="width: 10%;">
            <col span="1" style="width: 50%;">
            <col span="1" style="width: 10%;">
            </colgroup>
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="text-center">{{category_name}}</th>
                    <th class="text-right">Amount</th>
                </tr>
            </thead>
            <tbody>
                {{#each transactions as |transaction|}}
                {{> transaction-details}}
                {{/each}}
            </tbody>
            <tfoot>
                <th colspan="2">Total:</th>
                <td class="text-right">00.00</td>
            </tfoot>
        </table>
        {{/each}}


    </section>

    {{!-- Report Wrapper End --}}
</div>

<script src="./js/adders.js"></script>