<div id="login-wrapper" class="bg-sec mt-md-5 mx-auto pt-1 px-3 rounded">

    <h3 class="text-center">Login</h3>

    <form>
        <div class="form-group">
            <label for="login-email">Email:</label>
            <input id="login-email" type="email" class="form-control">
        </div>
        <div class="form-group">
            <label for="login-password">Password:</label>
            <input id="login-password" type="password" class="form-control">
        </div>
        <button id="submit-button" type="submit" class="btn btn-block sbm-btn bg-tert mt-4">Submit</button>
    </form>
    <p class="mt-2 mr-2 pb-2 text-right">Don't have an account? <a href="/signup">Sign-up</a></p>
</div>

<script src="/js/login.js"></script>